<div class="admin-container">
    <h1>Admin Panel</h1>

    <div class="admin-controls">
        <% if (allUsersReady) { %>
            <form action="/match-users" method="POST" style="display: inline;">
                <button type="submit">Generate Matches</button>
            </form>
        <% } %>
    </div>

    <div class="users-table">
        <h2>User Status</h2>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Match</th>
                    <th>Status</th>
                    <th>Likes</th>
                    <th>Dislikes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <% if (!user.isAdmin) { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td class="match-cell">
                                <% if (user.matchedWith) { %>
                                    <% const matchedUser = users.find(u => u.id === user.matchedWith); %>
                                    <% if (matchedUser) { %>
                                        üéÅ <%= matchedUser.username %>
                                    <% } else { %>
                                        Match not found
                                    <% } %>
                                <% } else { %>
                                    Not matched yet
                                <% } %>
                            </td>
                            <td class="<%= user.ready ? 'status-ready' : 'status-not-ready' %>">
                                <%= user.ready ? '‚úì Ready' : '‚è≥ Not Ready' %>
                            </td>
                            <td><%= user.likes ? user.likes.join('<br>') : '' %></td>
                            <td><%= user.dislikes ? user.dislikes.join('<br>') : '' %></td>
                            <td>
                                <form action="/delete-user/<%= user.id %>" method="POST">
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div class="add-user-form">
        <h2>Add New User</h2>
        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
        <form action="/add-user" method="POST">
            <div class="form-control">
                <input 
                    type="text" 
                    name="username" 
                    placeholder="Username" 
                    pattern="^(?!admin$|ADMIN$).*$"
                    title="Username cannot be 'admin'"
                    required
                >
            </div>
            <div class="form-control">
                <input type="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit">Add User</button>
        </form>
    </div>

    <div class="logout-button">
        <form action="/logout" method="POST">
            <button type="submit" class="btn-logout">Logout</button>
        </form>
    </div>
</div>

<style>
.error-message {
    color: var(--christmas-red);
    text-align: center;
    margin-bottom: 15px;
    padding: 10px;
    background-color: rgba(212, 36, 38, 0.1);
    border-radius: 4px;
}
</style> 